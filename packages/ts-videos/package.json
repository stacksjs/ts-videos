{
  "name": "ts-videos",
  "type": "module",
  "version": "0.0.0",
  "description": "Modern video tooling.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-videos",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-videos.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-videos/issues"
  },
  "keywords": [
    "video",
    "bun",
    "stacks",
    "typescript",
    "javascript"
  ],
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/src/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vidx": "./dist/bin/cli.js"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bunx --bun pickier .",
    "lint:fix": "bunx --bun pickier . --fix",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "release": "bun run changelog && bunx bumpp -r --all",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit"
  },
  "devDependencies": {
    "better-dx": "^0.2.5"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": "bunx pickier . --fix"
  }
}
