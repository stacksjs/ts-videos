{
  "name": "ts-videos",
  "type": "module",
  "version": "0.0.0",
  "description": "Modern video tooling - zero dependency TypeScript media toolkit.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-videos",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-videos.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-videos/issues"
  },
  "keywords": [
    "video",
    "audio",
    "media",
    "codec",
    "demuxer",
    "muxer",
    "mp4",
    "webm",
    "typescript",
    "zero-dependency"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ts-videos": "./dist/bin/cli.js"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bunx --bun pickier .",
    "lint:fix": "bunx --bun pickier . --fix",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "release": "bun run changelog && bunx bumpp -r --all",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/clapp": "^0.2.0",
    "better-dx": "^0.2.5",
    "bun-plugin-dtsx": "^0.9.9"
  },
  "optionalDependencies": {
    "@ts-videos/mp4": "workspace:*",
    "@ts-videos/webm": "workspace:*",
    "ts-audio": "link:ts-audio"
  }
}
